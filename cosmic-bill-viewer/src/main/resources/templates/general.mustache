<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>Cosmic Usage-based Billing - Bill Viewer</title>

        {{> partials/libraries-css }}
        <link href="/public/app/GeneralView.css" rel="stylesheet">
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body>
        <div class="container">
            <div id="ui-title-row" class="row">
                <div class="col-md-12">
                    <h1>Cosmic Usage-based Billing <small>Bill Viewer</small></h1>
                </div>
            </div>
            {{> partials/error }}
            <div class="row">
                <div class="col-md-12">
                    <h2 id="ui-domains-table-title">Summary <small>Monthly costs</small></h2>
                    <table id="ui-domains-table" class="table table-striped">
                        <thead>
                            <tr>
                                <th class="ui-domains-table-header"
                                    data-label="Domain"
                                    data-sort-by="DOMAIN_PATH"
                                    data-sort-order="ASC"
                                    data-selected="true"></th>
                                <th class="ui-domains-table-header"
                                    data-label="UUID"></th>
                                <th class="ui-domains-table-header"
                                    data-label="Path"></th>
                                <th class="ui-domains-table-header"
                                    data-label="Total"></th>
                                <th class="ui-domains-table-header"
                                    data-label="Compute"></th>
                                <th class="ui-domains-table-header"
                                    data-label="Storage"></th>
                                <th class="ui-domains-table-header"
                                    data-label="Networking"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- #ui-domains-list-template -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <script id="ui-domains-list-template" type="x-tmpl-mustache">
        {{=<% %>=}}
            {{# domains }}
            <tr data-domain-path="{{{ path }}}" data-domain-uuid="{{{ uuid }}}">
                <td>{{{ name }}}</td>
                <td>{{{ uuid }}}</td>
                <td>{{{ path }}}</td>
                <td class="complete-report" data-domain-path="{{{ path }}}"> Open </td>
                <td class="compute-report" data-domain-path="{{{ path }}}" data-domain-uuid="{{{ uuid }}}"> Open </td>
                <td class="storage-report" data-domain-path="{{{ path }}}" data-domain-uuid="{{{ uuid }}}"> Open </td>
                <td class="networking-report" data-domain-path="{{{ path }}}" data-domain-uuid="{{{ uuid }}}"> Open </td>
            </tr>
            {{/ domains }}
            {{^ domains }}
                <tr class="ui-domain-no-data">
                    <td class="text-center" colspan="7">None</td>
                </tr>
            {{/ domains }}
        <%={{ }}=%>
        </script>

        {{> partials/loading }}
        {{> partials/libraries-js }}

        <script src="/public/app/Class.js"></script>
        <script src="/public/app/CostCalculator.js"></script>
        <script src="/public/app/GeneralView.js"></script>
        <script>
            $(function () {
                new GeneralView(
                    "{{{ config.cosmicApiBaseUrl }}}",
                    "{{{ token }}}",
                    {{{ config.cpuPrice }}},
                    {{{ config.memoryPrice }}},
                    {{{ config.storagePrice }}},
                    {{{ config.publicIpPrice }}},
                    {{{ config.serviceFee }}},
                    {{{ config.innovationFee }}}
                )
            });
        </script>
    </body>
</html>
